<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="plugin" group="system" method="upgrade">
	<name>System - CBX PHP Debug</name>
	<author>Codeboxr Team</author>
	<creationDate>08 Dec, 2018</creationDate>
	<copyright>Copyright (C) 2018 Codeboxr.com . All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>info@codeboxr.com</authorEmail>
	<authorUrl>codeboxr.com</authorUrl>
	<version>1.0.0</version>
	<description>Easy php debug log for joomla, debug file located in the logs folder as debug.log</description>
	<files>
		<filename plugin="cbxdebug">cbxdebug.php</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
						name="enable_debug"
						type="radio"
						label="Enable Debug"
						description="Enable/disable php error debug"
						class="btn-group btn-group-yesno"
						default="0"				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
						name="display_error"
						type="radio"
						label="Display Errors"
						description="Enable/disable display php error"
						class="btn-group btn-group-yesno"
						default="0"				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
						name="log_error"
						type="radio"
						label="Log Error in debug file"
						description="Enable/disable save php errors in log file"
						class="btn-group btn-group-yesno"
						default="0"				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
